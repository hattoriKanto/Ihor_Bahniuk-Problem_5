generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Character {
  id          String    @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String
  animeTitle  String
  species     String
  age         Int
  gender      String
  appearance  String[]
  role        String
  voiceActor  String
}
